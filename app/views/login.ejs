<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./parts/head.ejs %>
</head>
<body class="login-screen">
  <% include ./parts/header.ejs %>
  <main>
    <main>
 
  <div class="login-box">
    <div class="login-logo">
      <a href><b>Civitas</b>.com</small></a>
    </div><!-- /.login-logo -->
    <div class="login-box-body">
      <h4 class="login-box-msg">Security chat...</h4>



      <form class="login-form" action="/user/api/v1/login" method="post">
        <div class="form-group errGroup">
        </div>
        <div ng-class="{'form-group':true, 'has-feedback':true, 'has-error':isErrorReq}">	      	
            <input class="form-control" type="email" name="email" placeholder="Email" autofocus required/>
        </div>
        <div ng-class="{'form-group':true, 'has-feedback':true, 'has-error':isErrorReq}">	      	
          <input class="form-control" type="password" name="password" placeholder="Password" required/>
      </div>
          <div class="row">
            <div class="col-xs-12">
              <button type="submit" class="btn btn-primary btn-block btn-flat" name="submit">Login</button>
              <p><b>Don't have an account?</b> </p>
              <a href="/user/signup"  class="btn btn-primary btn-block btn-flat"><b>Sign Up Here</b></a><br>
            </div><!-- /.col -->
        </div><!-- /.row -->
        </div><!-- /.login-box-body -->
      </form><!-- / form -->
    </div><!-- /.login-box-body -->
  </div><!-- /.login-box -->


  </main>
  <% include ./parts/footer.ejs %>
</body>
</html>









